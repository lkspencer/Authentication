<Window x:Class="Trainer.Overlay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="WPFWindow"
        Title="Overlay" 
        Width="1407" 
        Height="841" 
        ResizeMode="CanMinimize" 
        ScrollViewer.CanContentScroll="True">

  <Grid x:Name="LayoutRoot" >
    <Border Grid.Row="1">
      <Label x:Name="matchCount" Content="Label" />
    </Border>
    <Border Grid.Row="1" Name="border" ClipToBounds="True">
      <Canvas x:Name="canvas" Width="1364" Height="765" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,37,0,0" ></Canvas>
    </Border>
  </Grid>
</Window>
