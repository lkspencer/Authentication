<Window x:Class="Trainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Authentication" Height="556" Width="811" ResizeMode="CanMinimize" ScrollViewer.CanContentScroll="True">
  <Grid>
    <Image HorizontalAlignment="Left" Height="505" Margin="10,10,0,0" VerticalAlignment="Top" Width="506" Name="ImageViewer"/>
    <Button x:Name="Train" Content="Train" HorizontalAlignment="Left" Margin="521,65,0,0" VerticalAlignment="Top" Width="75" Click="Train_Click"/>
    <ComboBox x:Name="DeviceList" HorizontalAlignment="Left" Margin="521,10,0,0" VerticalAlignment="Top" Width="157" SelectionChanged="DeviceList_SelectionChanged"/>
    <TextBox x:Name="NameTextBox" HorizontalAlignment="Left" Height="23" Margin="521,37,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
    <Button x:Name="Predict" Content="Predict" HorizontalAlignment="Left" Margin="521,90,0,0" VerticalAlignment="Top" Width="75" Click="Predict_Click"/>

  </Grid>
</Window>
