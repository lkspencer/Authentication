<Window x:Class="Basic.AnotherTest"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AnotherTest" Height="800" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <StackPanel Orientation="Vertical">
                <Label Content="Live Feed"  />
                <Image Name="Photo" Width="400" Height="300" Source="{Binding CapturedImage}" />
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Label Content="Detected Face(s)"  />
                <Image Name="Face" Width="400" Height="300" Source="{Binding CapturedImageWithFace}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
